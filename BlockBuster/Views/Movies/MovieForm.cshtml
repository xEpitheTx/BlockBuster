@model BlockBuster.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Movie.Id == 0)
{
    <h2>New Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        <div class="col-cs-2">
            @Html.LabelFor(m => m.Movie.Name)
            @Html.TextBoxFor(m => m.Movie.Name, new { @class="form-control", @id="ex1"})
            @Html.ValidationMessageFor(m => m.Movie.Name)

        </div>
        <div class="col-cs-2">
            @Html.LabelFor(m => m.Movie.ReleaseDate)
            @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyy}", new { @class="form-control", @id="ex1" })
            @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
        </div>
        <div class="col-cs-2">
            @Html.LabelFor(m => m.Movie.GenreID)
            @Html.DropDownListFor(m => m.Movie.GenreID, new SelectList(Model.Genres, "Id", "Type"), "Select Genre", new { @class="form-control", @id="ex1" })
            @Html.ValidationMessageFor(m => m.Movie.GenreID)
        </div>
        <div class="col-cs-2">
            @Html.LabelFor(m => m.Movie.Stock)
            @Html.TextBoxFor(m => m.Movie.Stock, new { @class="form-control", @id="ex1"})
            @Html.ValidationMessageFor(m => m.Movie.Stock)
        </div>
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}